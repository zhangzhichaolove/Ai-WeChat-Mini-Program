<view class="about-container">
  <view class="logo-section">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <view class="app-name">AI助手</view>
    <view class="version">版本号：{{version}}</view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="checkUpdate">
      <text>检查更新</text>
      <text class="arrow">></text>
    </view>

    <view class="menu-item">
      <text>当前版本</text>
      <text class="value">{{version}}</text>
    </view>

    <view class="menu-item">
      <text>开发者</text>
      <text class="value">Your Company</text>
    </view>

    <view class="menu-item" bindtap="contactUs">
      <text>联系我们</text>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="showPrivacyPolicy">
      <text>隐私政策</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="copyright">
    Copyright © {{currentYear}} All Rights Reserved
  </view>
</view> 