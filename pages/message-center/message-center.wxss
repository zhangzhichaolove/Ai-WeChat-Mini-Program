.message-center {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.read-all {
  color: #1296db;
  font-size: 28rpx;
}

.message-list {
  flex: 1;
  background-color: #fff;
  overflow: hidden;
}

.message-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  position: relative;
}

.message-item.unread {
  background-color: #f8f8f8;
}

.message-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
}

.message-brief {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.empty-message {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 