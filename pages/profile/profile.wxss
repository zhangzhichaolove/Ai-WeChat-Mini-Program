.profile-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  background-color: white;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.menu-list {
  background-color: white;
}

.menu-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  color: #999;
}

.menu-title {
  display: flex;
  align-items: center;
}

.badge {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
  text-align: center;
  line-height: 32rpx;
  margin-left: 10rpx;
} 